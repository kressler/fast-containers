{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/cmake-build-${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug",
      "description": "Debug build without optimizations",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_AVX2": "OFF",
        "ENABLE_ASAN": "OFF"
      }
    },
    {
      "name": "debug-avx2",
      "displayName": "Debug + AVX2",
      "description": "Debug build with AVX2 SIMD optimizations",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_AVX2": "ON",
        "ENABLE_ASAN": "OFF"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with AVX2 optimizations (default)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_AVX2": "ON"
      }
    },
    {
      "name": "release-no-avx2",
      "displayName": "Release (no AVX2)",
      "description": "Release build without AVX2 (portable)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENABLE_AVX2": "OFF"
      }
    },
    {
      "name": "asan",
      "displayName": "ASAN",
      "description": "Debug build with AddressSanitizer",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_ASAN": "ON",
        "ENABLE_AVX2": "OFF"
      }
    },
    {
      "name": "gcc-debug",
      "displayName": "GCC Debug",
      "description": "Debug build with GCC",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "gcc-release",
      "displayName": "GCC Release",
      "description": "Release build with GCC",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "clang-debug",
      "displayName": "Clang Debug",
      "description": "Debug build with Clang",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++-19"
      }
    },
    {
      "name": "clang-release",
      "displayName": "Clang Release",
      "description": "Release build with Clang",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++-19"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Build Debug",
      "description": "Build debug configuration"
    },
    {
      "name": "debug-avx2",
      "configurePreset": "debug-avx2",
      "displayName": "Build Debug + AVX2",
      "description": "Build debug with AVX2"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Build Release",
      "description": "Build release configuration"
    },
    {
      "name": "release-no-avx2",
      "configurePreset": "release-no-avx2",
      "displayName": "Build Release (no AVX2)",
      "description": "Build release without AVX2"
    },
    {
      "name": "asan",
      "configurePreset": "asan",
      "displayName": "Build ASAN",
      "description": "Build with AddressSanitizer"
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug",
      "displayName": "Build GCC Debug",
      "description": "Build debug with GCC"
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release",
      "displayName": "Build GCC Release",
      "description": "Build release with GCC"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "displayName": "Build Clang Debug",
      "description": "Build debug with Clang"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release",
      "displayName": "Build Clang Release",
      "description": "Build release with Clang"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "displayName": "Test Debug",
      "description": "Run tests in debug mode",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-avx2",
      "configurePreset": "debug-avx2",
      "displayName": "Test Debug + AVX2",
      "description": "Run tests with AVX2",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "release",
      "configurePreset": "release",
      "displayName": "Test Release",
      "description": "Run tests in release mode",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "release-no-avx2",
      "configurePreset": "release-no-avx2",
      "displayName": "Test Release (no AVX2)",
      "description": "Run tests without AVX2",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "asan",
      "configurePreset": "asan",
      "displayName": "Test ASAN",
      "description": "Run tests with AddressSanitizer",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug",
      "displayName": "Test GCC Debug",
      "description": "Run tests with GCC debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release",
      "displayName": "Test GCC Release",
      "description": "Run tests with GCC release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "displayName": "Test Clang Debug",
      "description": "Run tests with Clang debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release",
      "displayName": "Test Clang Release",
      "description": "Run tests with Clang release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
